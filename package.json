{
  "name": "@eatonfyi/urls",
  "version": "1.0.2",
  "description": "Extended parsing and normalization of URLs, with support for TLD as a distinct property.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "/dist",
    "README.md"
  ],
  "scripts": {
    "build": "pkgroll",
    "package": "npm run clean;pkgroll --minify --clean-dist",
    "clean": "shx rm -rf .tsimp;shx rm -rf dist;",
    "test": "ava"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--import=tsimp"
    ]
  },
  "keywords": [
    "url",
    "normalize",
    "tld"
  ],
  "author": "Jeff Eaton <jeff@eaton.fyi> (https://eaton.fyi)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eaton/urls.git"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "ava": "^6.2.0",
    "pkgroll": "^2.5.1",
    "shx": "^0.3.4",
    "tsimp": "^2.0.12",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/micromatch": "^4.0.9",
    "micromatch": "^4.0.8",
    "tldts": "^6.1.68"
  }
}
